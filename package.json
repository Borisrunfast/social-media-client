{
  "name": "css-frameworks-ca",
  "version": "1.0.0",
  "description": "Test",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "lint": "eslint src/**/*.js --ignore-pattern src/js/test/**/*.test.js --ignore-pattern cypress/**/*.cy.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "format": "prettier --write src/**/*.js",
    "prepare": "husky install",
    "test": "npm run test-unit",
    "test-unit": "jest",
    "test-e2e": "cypress open",
    "test-e2e-report": "cypress run --reporter mochawesome",
    "test-e2e-cli": "cypress run"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@eslint/js": "^9.12.0",
    "cypress": "^13.15.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^4.0.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "lint-staged": "^15.2.10",
    "live-server": "^1.2.2",
    "mrm": "^2.6.2",
    "prettier": "^3.3.3",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "src/js/test/**/*.test.js": [
      "prettier --write"
    ],
    "cypress/**/*.cy.js": [
      "prettier --write"
    ]
  },
  "jest": {
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  }
}
